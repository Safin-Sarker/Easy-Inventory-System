@model SigninModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="text-center card-title mb-4 text-success"><i>Easy Inventory System</i></h3>

                <form id="account" method="post" asp-antiforgery="true" asp-area="" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">

                    <!-- Email Input -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i> <!-- Email Icon -->
                        </span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Email" class="form-label">Email</label>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <!-- Password Input -->
                    <div class="input-group mb-3">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i> <!-- Password Icon -->
                        </span>
                        <div class="form-floating flex-grow-1">
                            <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Password" class="form-label">Password</label>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <!-- Login Button -->
                    <button id="login-submit" type="submit" class="btn btn-success d-block w-100 mt-3">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>
                </form>

                <!-- Link to Register -->
                <div class="text-center mt-3 mb-3">
                    <span>Don't have an account?</span>
                    <a asp-action="Register" asp-controller="Account" class="text-success">Create Your Free Account</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
