@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Access Denied";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="text-center">
            <h1 class="display-4 text-danger">Access Denied</h1>
            <p class="lead">Hello!</p>
            <p class="mb-4">
                You do not have permission to access this page or perform this action. <br />
                If you believe this is an error, please contact your administrator.
            </p>
            <a href="/" class="btn btn-primary btn-lg">
                <i class="bi bi-house"></i> Go to Home
            </a>
            <a href="mailto:admin@example.com" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-envelope"></i> Contact Administrator
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
