@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure the layout is correctly referenced
}

<!-- Hero Section -->
<section class="bg-success text-white text-center py-5">
    <div class="container">
        <div class="row align-items-center">
            <!-- Text Content -->
            <div class="col-md-6">
                <h1 class="display-4">Manage Your Inventory Seamlessly</h1>
                <p class="lead">A powerful and easy-to-use inventory management system to track, manage, and organize your stock efficiently.</p>
                <a href="#features" class="btn btn-light btn-lg mx-2">Learn More</a>
                <a asp-area="" asp-controller="Account" asp-action="Register" class="btn btn-secondary btn-lg mx-2">Get Started</a>
            </div>
            <!-- Image -->
            <div class="col-md-6">
                <img src="~/images/InventorySystem.jpg" style="width: 500px; height: 350px;" class="img-fluid rounded" alt="Inventory System">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Why Choose DevSkill.Inventory?</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <i class="bi bi-box h1"></i>
                <h4>Real-Time Stock Updates</h4>
                <p>Stay updated with live inventory changes.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-graph-up h1"></i>
                <h4>Detailed Reporting</h4>
                <p>Generate comprehensive inventory reports.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-person-badge h1"></i>
                <h4>Role-Based Access Control</h4>
                <p>Secure and manage user access efficiently.</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-laptop h1"></i>
                <h4>User-Friendly Interface</h4>
                <p>Simple, intuitive, and easy to navigate.</p>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">About Us</h2>
        <p class="text-center">DevSkill.Inventory is a comprehensive solution designed to streamline inventory management for businesses of all sizes. Our platform ensures efficiency, reliability, and user satisfaction.</p>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Get in Touch</h2>
        <p class="text-center">Have questions or need help? Contact us at <a href="mailto:support@Easy.inventory">support@easy.inventory</a>.</p>
    </div>
</section>

