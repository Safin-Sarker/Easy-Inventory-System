@model DevSkill.Inventory.Web.Areas.Admin.Models.User_Models.UserProfileModel

@{
    ViewData["Title"] = "Profile Settings";
}

@section Styles
{
    <link rel="stylesheet" href="~/adminlte/css/adminlte.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
}

<partial name="_ResponsePartial" />

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12 d-flex justify-content-between align-items-center">
                <h1 class="text-start">
                    <i class="fas fa-user-circle fa-w-18 me-1"></i> <b>Profile Settings</b>
                </h1>
                <a asp-area="Admin" asp-controller="Profile" asp-action="Index" class="custom-back-icon">
                    <i class="fa-solid fa-reply"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 mx-auto">
                <div class="card shadow-sm p-4">
                    <div class="card-body">
                        <!-- Form start -->
                        <form asp-antiforgery="true" asp-area="Admin" asp-controller="Profile" asp-action="Update" method="post" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <input type="hidden" asp-for="Id" />
                                    <!-- Profile Picture -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label class="col-form-label">Profile Picture</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <div class="mb-3">
                                                <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="img-circle elevation-2" style="max-width: 150px;">
                                            </div>
                                            <input type="file" asp-for="ProfilePicture" class="form-control">
                                        </div>
                                    </div>

                                    <!-- Full Name -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="FullName" class="col-form-label">Full Name</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="text" asp-for="FullName" class="form-control" placeholder="Enter your full name">
                                            <span asp-validation-for="FullName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- Username -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="Username" class="col-form-label">Username</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="text" asp-for="Username" class="form-control" readonly>
                                        </div>
                                    </div>

                                    <!-- Email -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="Email" class="col-form-label">Email</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="email" asp-for="Email" class="form-control" readonly>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="Role" class="col-form-label">Role</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="text" asp-for="Role" class="form-control" readonly>
                                        </div>
                                    </div>

                                    <!-- Contact Number -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="ContactNumber" class="col-form-label">Contact Number</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="text" asp-for="ContactNumber" class="form-control" placeholder="Enter contact number">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <!-- Gender -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="Gender" class="col-form-label">Gender</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <select asp-for="Gender" class="form-control">
                                                <option value="Male">Male</option>
                                                <option value="Female">Female</option>
                                                <option value="Other">Other</option>
                                            </select>
                                        </div>
                                    </div>

                                    <!-- Birth Date -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="BirthDate" class="col-form-label">Birth Date</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="date" asp-for="BirthDate" class="form-control">
                                        </div>
                                    </div>

                                    <!-- Address -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="PresentAddress" class="col-form-label">Present Address</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <textarea asp-for="PresentAddress"  class="form-control" placeholder="Enter present address"></textarea>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="PermanentAddress" class="col-form-label">Permanent Address</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <textarea asp-for="PermanentAddress"  class="form-control" placeholder="Enter permanent address"></textarea>
                                        </div>
                                    </div>

                                    <!-- Time Zone -->
                                    <div class="row mb-3">
                                        <div class="col-sm-4 text-center">
                                            <label asp-for="TimeZone" class="col-form-label">Time Zone</label>
                                        </div>
                                        <div class="col-sm-8">
                                            <input type="text" asp-for="TimeZone" class="form-control" placeholder="Enter time zone">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-3">

                            <!-- Submit Button -->
                            <div class="row">
                                <div class="col-sm-10 offset-sm-2 d-flex justify-content-start">
                                    <button type="submit" class="btn btn-success btn-lg" style="margin-right: 20px;">
                                        <i class="far fa-check-square me-1"></i> Save
                                    </button>
                                    <a class="btn btn-outline-danger btn-lg" asp-area="Admin" asp-controller="Profile" asp-action="Index">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>


    <script>
        $(document).ready(function () {
            $.validator.unobtrusive.parse("form");
        });
    </script>
}
