@model DashbordModel

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0"><b>Dashboard</b></h1>
            </div>
        </div>
    </div>
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Total Warehouse -->
            <div class="col-lg-4 col-12">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@Model.TotalWarehouses</h3> <!-- Replace with dynamic count if available -->
                        <p>Total Warehouse</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-warehouse"></i>
                    </div>
                   @*  <a href="/Warehouse" class="small-box-footer"> <i class="fas fa-arrow-circle-right"></i></a> *@
                </div>
            </div>

            <!-- Total Product -->
            <div class="col-lg-4 col-12">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@Model.TotalProducts</h3> <!-- Replace with dynamic count if available -->
                        <p>Total Products</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-boxes"></i>
                    </div>
                 @*    <a href="/Product" class="small-box-footer"><i class="fas fa-arrow-circle-right"></i></a> *@
                </div>
            </div>

            <!-- Total Service -->
            <div class="col-lg-4 col-12">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@Model.TotalServices</h3> <!-- Replace with dynamic count if available -->
                        <p>Total Service</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-cogs"></i>
                    </div>
                   @*  <a href="/Service" class="small-box-footer">More info <i class="fas fa-arrow-circle-right"></i></a> *@
                </div>
            </div>
        </div>
    </div>
</section>
