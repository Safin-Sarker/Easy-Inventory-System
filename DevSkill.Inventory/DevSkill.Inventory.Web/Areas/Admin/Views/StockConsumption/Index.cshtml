@section Scripts {
    <!-- DataTables & Plugins JS -->
    <script src="~/adminlte/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminlte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/adminlte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/adminlte/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/adminlte/plugins/jszip/jszip.min.js"></script>
    <script src="~/adminlte/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/adminlte/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/adminlte/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/adminlte/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/adminlte/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <!-- Initialize DataTables -->
    <script>
        $(document).ready(function () {
            $('#stockConsumptionTable').DataTable({
                processing: true,
                serverSide: true,
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                lengthMenu: [
                    [10, 25, 50, -1],
                    [10, 25, 50, 'All']
                ],
                ajax: {
                    url: "/Admin/StockConsumption/StockConsumptionJsonData",
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        d.SearchItem = {
                            // Add search parameters here if needed
                        };
                        return JSON.stringify(d);
                    }
                },
                columnDefs: [
                    {
                        targets: 0,  // Assuming voucher number is in the first column (adjust if needed)
                        render: function (data, type, row) {
                            return `<a href="/Admin/StockConsumption/Details/${row[5]}">${data}</a>`;
                        }
                    },
                    {
                        orderable: false,
                        targets: 5,
                        render: function (data, type, row) {
                            return `<div class="dropdown">
                                            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                                                Actions
                                            </button>
                                              <div class="dropdown-menu">
                                                <a class="dropdown-item" href="/Admin/StockConsumption/ExportToPdf?id=${data}">Export to PDF</a>
                                                <a class="dropdown-item deleteBtn" href="#" data-id="${data}">Delete</a>
                                              </div>
                                        </div>`;
                        }
                    }
                ]
            });

            $('#stockConsumptionTable').on('click', '.deleteBtn', function () {
                var id = $(this).data('id');
                $('#deleteId').val(id); // Set the hidden input value
                $('#deleteForm').attr('action', '/Admin/StockConsumption/delete'); // Set form action
                $('#modal-default').modal('show'); // Show the modal
            });

            $('#deleteButton').on('click', function () {
                $('#deleteForm').submit(); // Submit the form when 'Yes, Delete!' is clicked
            });



        });
    </script>

}



<partial name="_ResponsePartial" />

