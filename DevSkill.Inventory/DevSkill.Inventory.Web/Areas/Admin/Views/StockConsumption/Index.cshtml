<div class="card">
    <div class="card-header">
        <h3 class="card-title">Stock Consumption</h3>
        <div class="card-tools">
            <a href="/Admin/StockConsumption/Create" class="btn btn-success btn-sm">+ New Record</a>
        </div>
    </div>

    <div class="card-body">
        <table id="stockConsumptionTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Voucher Number</th>
                    <th>Voucher Date</th>
                    <th>Warehouse</th>
                    <th>Details</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

